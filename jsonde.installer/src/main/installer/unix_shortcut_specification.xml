<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<shortcuts>

    <skipIfNotSupported/>

    <programGroup
            defaultName="Programming"
            location="applications"/>

    <shortcut
            name="jSonde"
            description="jSonde"

            type="Application"

            workingDirectory="$INSTALL_PATH"
            target="$INSTALL_PATH/jsonde.sh"

            iconFile="$INSTALL_PATH/jsonde.png"
            iconIndex="0"

            programGroup="yes"
            desktop="yes"

            encoding="UTF-8"
            terminal="false"
            KdeSubstUID="false"

            Categories="Development;"
            >
        <createForPack name="jSonde"/>
    </shortcut>

    <shortcut
            name="jSonde web site"
            description="Visit jSonde official web site"

            type="Application"

            target="xdg-open"
            commandLine="https://github.com/bedrin/jsonde"

            programGroup="yes"
            desktop="no"

            iconFile="applications-internet"
            iconIndex="0"

            encoding="UTF-8"
            terminal="false"
            KdeSubstUID="false"

            Categories="Development;"
            >
        <createForPack name="jSonde"/>
    </shortcut>

    <shortcut
            name="Uninstall jSonde"
            description="Uninstall jSonde"

            type="Application"

            target="java"
            commandLine="-jar
     &quot;$INSTALL_PATH/Uninstaller/uninstaller.jar&quot;"

            programGroup="yes"
            desktop="no"

            iconFile="trashcan_full"
            iconIndex="0"

            encoding="UTF-8"
            terminal="false"
            KdeSubstUID="false"

            Categories="Development;"
            >
        <createForPack name="jSonde"/>
    </shortcut>

</shortcuts>
