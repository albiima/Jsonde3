<shortcuts>

    <skipIfNotSupported/>

    <programGroup
            defaultName="jSonde"
            location="applications"/>

    <shortcut
            name="jSonde"
            description="jSonde"

            type="Application"
            initialState="noShow"

            workingDirectory="$INSTALL_PATH"
            target="$INSTALL_PATH\jsonde.exe"

            iconFile="$INSTALL_PATH/jsonde.ico"
            iconIndex="0"

            programGroup="yes"
            desktop="yes"

            encoding="UTF-8"
            terminal="false"
            KdeSubstUID="false"

            Categories="Development;"
            >
        <createForPack name="jSonde"/>
    </shortcut>

    <shortcut
            name="jSonde web site"
            description="Visit jSonde official web site"

            target="https://github.com/bedrin/jsonde"
            initialState="normal"

            programGroup="yes"
            desktop="no"

            encoding="UTF-8"
            terminal="false"
            KdeSubstUID="false"

            Categories="Development;"
            >
        <createForPack name="jSonde"/>
    </shortcut>

    <shortcut
            name="Uninstall jSonde"
            description="Uninstall jSonde"

            type="Application"

            target="javaw"
            commandLine="-jar
     &quot;$INSTALL_PATH/Uninstaller/uninstaller.jar&quot;"

            programGroup="yes"
            desktop="no"

            iconFile="$INSTALL_PATH/setup.ico"
            iconIndex="0"

            encoding="UTF-8"
            terminal="false"
            KdeSubstUID="false"

            Categories="Development;"
            >
        <createForPack name="jSonde"/>
    </shortcut>

